@model pharma_sales_and_management_system.Models.Manufacturer

@{
    ViewData["Title"] = "Login";
}

@{
    Layout = "_Login";
}

<html>
<head>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html,
        body {
            height: 100%;
        }

        html {
            background: linear-gradient(to right bottom, #fbdb89, #f48982);
            background-repeat: no-repeat;
            background-size: cover;
            width: 100%;
            height: 100%;
            background-attachment: fixed;
        }

        body {
            font-family: sans-serif;
            line-height: 1.4;
            display: flex;
        }

        .container {
            width: 400px;
            margin: 0 auto; /* Center the container horizontally */
            padding: 36px 48px 48px 48px;
            background-color: #f2efee;
            border-radius: 11px;
            box-shadow: 0 2.4rem 4.8rem rgba(0, 0, 0, 0.15);
            position: absolute;
            top: 50%; /* Center the container vertically */
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .login-title {
            padding: 15px;
            font-size: 22px;
            font-weight: 600;
            text-align: center;
        }

        .login-form {
            display: grid;
            grid-template-columns: 1fr;
            row-gap: 16px;
        }

            .login-form label {
                display: block;
                margin-bottom: 8px;
            }

            .login-form input {
                width: 100%;
                padding: 1.2rem;
                border-radius: 9px;
                border: none;
            }

                .login-form input:focus {
                    outline: none;
                    box-shadow: 0 0 0 4px rgba(253, 242, 233, 0.5);
                }

        .btn--form {
            background-color: #f48982;
            color: #fdf2e9;
            align-self: end;
            padding: 8px;
        }

        .btn,
        .btn:link,
        .btn:visited {
            display: inline-block;
            text-decoration: none;
            font-size: 20px;
            font-weight: 600;
            border-radius: 9px;
            border: none;
            cursor: pointer;
            font-family: inherit;
            transition: all 0.3s;
        }

        button {
            outline: 1px solid #f48982;
        }

        .btn--form:hover {
            background-color: #fdf2e9;
            color: #f48982;
        }

    </style>
</head>
<body>
    <div class="container">
        @if (TempData["InvalidLogin"] != null)
        {
            <div style="color:red;font-weight:bold;font-size: 20px;">
                @TempData["InvalidLogin"]
            </div>
        }
        <h2 class="login-title">Log in</h2>

        <form class="login-form mb-2" asp-action="Login">
            <div>
                <label for="email">Email </label>
                <input asp-for="Email" type="email" id="emailaddress" class="form-control" placeholder="Email address" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div>
                <label for="password">Password </label>
                <input asp-for="Password" type="password" id="password" placeholder="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input type="checkbox" id="checkbox-signin" value="lsRememberMe"> <label for="rememberMe">Remember me</label>
            <button class="btn btn--form" style="margin-top:20px;" type="submit" onclick="lsRememberMe()" value="Log in">
                Log in
            </button>
        </form>
        <p style="margin-top:20px;">Don't Have a Account? <a asp-action="Create">Register</a></p>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        const rmCheck = document.getElementById("checkbox-signin");
        const emailInput = document.getElementById("emailaddress");
        const passwordInput = document.getElementById("password");

        if (localStorage.checkbox3 && localStorage.checkbox3 !== "") {
            rmCheck.setAttribute("checked", "checked");
            emailInput.value = localStorage.username3;
            passwordInput.value = localStorage.password3;
        } else {
            rmCheck.removeAttribute("checked");
            emailInput.value = "";
            passwordInput.value = "";
        }

        function lsRememberMe() {
            if (rmCheck.checked && passwordInput.value !== "" && emailInput.value !== "") {
                localStorage.username3 = emailInput.value;
                localStorage.password3 = passwordInput.value;
                localStorage.checkbox3 = rmCheck.value;
            } else {
                localStorage.username3 = "";
                localStorage.password3 = "";
                localStorage.checkbox3 = "";
            }
        }
    </script>
}
