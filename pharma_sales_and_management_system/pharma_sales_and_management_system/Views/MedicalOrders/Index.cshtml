@model IEnumerable<pharma_sales_and_management_system.Models.MedicalOrder>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_MedicalLayout";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
    <h1> Pending Orders </h1>
<table class="table" style="position:absolute;width:80%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.TotalQuantity)*@
                Quantity
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    @if(item.IsPlaced == 0)
                {
              <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.ComponyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
}
    </tbody>
</table>
</div>
<br /><br /><br /><br /><br /><br />

<div class="container">
    <h1> Complete Orders </h1>
    <table class="table" style="position:absolute;width:80%;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company)
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.TotalQuantity)*@
                    Quantity
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BillAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                @if (item.IsPlaced == 1)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Company.ComponyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalQuantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BillAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                    </tr>

                }
            }
        </tbody>
    </table>
</div>